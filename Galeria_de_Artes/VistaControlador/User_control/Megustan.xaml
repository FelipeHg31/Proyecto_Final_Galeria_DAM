<UserControl x:Class="Galeria_de_Artes.VistaControlador.User_control.Megustan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Galeria_de_Artes.VistaControlador.User_control"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <Grid>
        <Image Source="/Resources/GifMusica1.gif" Stretch="UniformToFill"/>
        <TextBlock Text="Obras que me gustan" VerticalAlignment="Top" HorizontalAlignment="Center" Height="30" Width="250" Foreground="AliceBlue" FontSize="25" TextAlignment="Center"/>
        <ComboBox x:Name="gusta" Height="50" Width="300" Margin="0,150,0,0" MouseEnter="gusta_MouseEnter"/>
    </Grid>
</UserControl>
